@page
@model AbbyWeb.Pages.Categories.CreateModel

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2>Create</h2>
            </div>
        </div> 
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" />
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" />
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

